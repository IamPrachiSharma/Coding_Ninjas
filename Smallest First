import java.util.*;
public class Solution {
    public static int count(int n, int []arr) {
        // Write your code here.

          int cnt=0;
    for(int i=0;i<n;i++){
        for(int j=i;j<n;j++){
            if(arr[j]>=arr[i]){
                cnt++;
            }
            else break;
        }
    }
    return cnt;
    }
}
